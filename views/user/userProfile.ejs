											<h1 class="h4 text-gray-900 my-3">Add New Address</h1>
										</div>






										<%= userDatas.addressDetails[0].Fullname%>




										<form action="/address" class="user" method="POST">
											<div class="form-group row">
												<div class="col-sm-6 input-control">
													<label class="form-label">Full name*</label>
													<input type="text" class="form-control form-control-user"
														id="username" name="name" required />
													<p class="valid_error"></p>
												</div>
												<div class="col-sm-6 input-control">
													<label class="form-label">Company/Shop</label>
													<input type="text" class="form-control form-control-user" id=""
														name="company"  />
													<p class="valid_error"></p>
												</div>
											</div>
											<div class="form-group row">
												<div class="col-sm-6 input-control">
													<label class="form-label">Email*</label>
													<input type="email" class="form-control form-control-user"
														id="emailAddress" name="email" required />
													<p class="valid_error"></p>
												</div>
												<div class="col-sm-6 input-control">
													<label class="form-label">Mobile*</label>
													<input type="tel" class="form-control form-control-user" id=""
														name="mobile" pattern="[5-9]{1}[0-9]{9}" required />
													<p class="valid_error"></p>
												</div>
											</div>
											<div class="form-group row">
												<div class="col-sm-6 input-control">
													<label class="form-label">Country*</label>
													<input type="text" class="form-control form-control-user" id=""
														name="country" required />
													<p class="valid_error"></p>
												</div>
												<div class="col-sm-6 input-control">
													<label class="form-label">State*</label>
													<input type="text" class="form-control form-control-user" id=""
														name="state" required />
													<p class="valid_error"></p>
												</div>
											</div>
											<div class="form-group row">
												<div class="col-sm-6 input-control">
													<label class="form-label">City/Town*</label>
													<input type="text" class="form-control form-control-user" id=""
														name="town" required />
													<p class="valid_error"></p>
												</div>
												<div class="col-sm-6 input-control">
													<label class="form-label">Postal Code/ZIP*</label>
													<input type="tel" class="form-control form-control-user" id=""
														name="zip" pattern="[0-9]{4,7}" required />
													<p class="valid_error"></p>
												</div>
											</div>
											<div class="form-group row">
												<div class="col-sm-12 input-control">
													<label class="form-label">Street Address*</label>
													<textarea placeholder="Building No/Name, Locality, Street, Post Office"	class="form-control" rows="3" id="" name="address" required></textarea>
												</div>
