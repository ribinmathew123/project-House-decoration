<%- include('./layout/adminheader.ejs') %>
<%- include('./layout/adminsidebar.ejs') %>
  <main id="main" class="main">
    <div class="pagetitle">
      <h1> Category list </h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
          <li class="breadcrumb-item active">Dashboard</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row d-flex justify-content-center">

        <!-- Left side columns -->
        <div class="col-lg-10">
          <div class="row">

            

        
            <!-- End Reports -->

            <form class="row g-3" action="/product/category-lists" method="" >
              <div class="col-12">
                
<table class="table table-bordered text-center table-hover table-responsive" id=example  >
  <thead class="bg-dark text-white">
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Category Name</th>
      <th scope="col">Action</th>
    </tr>
      </thead>
  <thead >
        <tbody >
          <% details.forEach(function(category, index){ %> 
          
              <tr class="table-info">
                <th scope="row"><%= index + 1%></th>
                <td><%= category.name%></td>

                <td>
                  <% if(category.status==true) {%>
                    <a class="btn btn-warning btn-sm" href="/product/category-lists?id=<%= category._id%>"
                      role="button">Block</a>
                    <%}
                    else{%>
                      <a class="btn btn-success btn-sm" href="/product/category-lists?id=<%= category._id%>"
                    role="button">Unblock</a>
                      <%}%>
                    </td>
                
          
              
               
              </tr>
            <% }); %>
                                              </tbody>
                                      </table>
                                      </div>
            </form>
            
            <!-- Vertical Form -->






            

          </div>
        </div><!-- End Left side columns -->

        <!-- Right side columns -->
        <div class="col-lg-4">

          <!-- Recent Activity -->
          

          

          

          

        </div><!-- End Right side columns -->

      </div>
    </section>

  </main><!-- End #main -->


  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

