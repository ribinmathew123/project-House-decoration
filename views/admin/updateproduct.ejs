                  <input type="text"   name="sell" class="form-control" id="inputNanme4" required value="<%=user.sell%>">
                </div>
                <div class="col-12">

                <label for="inputNanme4" class="form-label">quantity </label>
                  <input type="text"   name="quantity" class="form-control" id="inputNanme4" required value="<%=user.quantity%>">
                </div>

                
              <div class="col-12">
              <label for="inputNanme4" class="form-label">Product Description </label>
                <input type="text"   name=" description" class="form-control" id="inputNanme4" required value="<%=user.description%>">

              </div>
             
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Update</button>
             
              </div>
