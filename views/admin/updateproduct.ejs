<%- include('./layout/adminheader.ejs') %>
  <%- include('./layout/adminsidebar.ejs') %>

    <main id="main" class="main">
      <div class="pagetitle">
        <h1>Add Category </h1>
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
          </ol>
        </nav>
      </div><!-- End Page Title -->

      <section class="section dashboard">
        <div class="row d-flex justify-content-center">

          <!-- Left side columns -->
          <div class="col-lg-10">
            <div class="row">

              <!-- End Reports -->

              <form action="/product/product-edit/<%=user._id%>" method="POST">


                <div class="col-12">
                  <input type="hidden" name="id" value="<%= user._id %>">

                  <label for="inputNanme4" class="form-label">Product Name </label>
                  <input type="text" name="name" class="form-control" id="inputNanme4" required value="<%=user.name%>">
                </div>

                <div class="col-12">

                  <label for="inputNanme4" class="form-label">Product cost </label>
                  <input type="text" name="cost" class="form-control" id="inputNanme4" required value="<%=user.cost%>">
                </div>

                <div class="col-12">

                  <label for="inputNanme4" class="form-label">sell price </label>
                  <input type="text" name="sell" class="form-control" id="inputNanme4" required value="<%=user.sell%>">
                </div>
                <div class="col-12">

                  <label for="inputNanme4" class="form-label">quantity </label>
                  <input type="text" name="quantity" class="form-control" id="inputNanme4" required
                    value="<%=user.quantity%>">
                </div>
                <label for="inputDescription" class="form-label">Product Description</label>
                <textarea class="form-control" name="description" id="inputDescription" rows="3"
                  required><%= user.description %></textarea>

                <div class="col-12 d-flex flex-wrap justify-content-center">



                  <div class="text-center">
                    <button type="submit" class="btn btn-primary">Update</button>


                  </div>
              </form>



            </div>

          </div>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModl">
            Edit Images</button>

          <!-- Vertical Form -->
        </div>

        </div><!-- End Left side columns -->

        <!-- Right side columns -->
        <div class="col-lg-4">

        </div><!-- End Right side columns -->

        </div>
        <!-- image part -->

      </section>

    </main><!-- End #main -->
    <div class="modal fade " id="exampleModl" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel"> Product Image</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="recipient-name" name="orderStatus" class="col-form-label"
                style="font-size: 18px; font-weight: bold; text-decoration: underline;">Image Edits</label>
            </div>
    
            <div class="row">
              <% for(var i=0;i<user.image_url.length;i+=2) { %>
              <div class="col-md-6">
                <form action="/product/image-edit/<%= user.image_url[i].public_id %>/<%= user._id %>" method="POST" enctype="multipart/form-data" class="text-center">
                  <div class="image-container border p-2" style="border-width: 4px;">
                    <img src="<%= user.image_url[i].url %>" style="width:50%; height:30%; object-fit:contain; display:block; margin:auto;">
                    <input style="width: 50%;
                    margin: auto;" type="file" id="file" name="images" onchange="return fileValidation()" multiple>                    <button class="update-image-btn btn btn-sm btn-success mt-2 mx-auto d-block">Update Image</button>
                  </div>
                </form>
              </div>
              <% if (i+1 < user.image_url.length) { %>
              <div class="col-md-6">
                <form action="/product/image-edit/<%= user.image_url[i+1].public_id %>/<%= user._id %>" method="POST" enctype="multipart/form-data" class="text-center">
                  <div class="image-container border p-2" style="border-width: 4px;">
                    <img src="<%= user.image_url[i+1].url %>" style="width:50%; height:30%; object-fit:contain; display:block; margin:auto;">
                   <input style="width: 50%;
                   margin: auto;" type="file" id="file" name="images" onchange="return fileValidation()" multiple>
                    <button class="update-image-btn btn btn-sm btn-success mt-2 mx-auto d-block">Update Image</button>
                  </div>
                </form>
              </div>
              <% } %>
              <% } %>
            </div>
            
    
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    

      <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
          class="bi bi-arrow-up-short"></i></a>


      <style>
        .form-label {
          font-weight: bold;
          font-size: 1.2rem;
          margin-bottom: 1rem;
          text-align: center;
        }

        .form-controp {
          padding: 0.25rem 0.5rem;
          font-size: 0.9rem;
          width: 40%;
        }

        .image-container {
          /* width: 48%;
      margin-right: 2%; */
          margin-bottom: 1rem;
        }

        .image-container:nth-child(2n) {
          margin-right: 0;
        }
      </style>






      <script>
        function fileValidations() {
          var fileInput =
            document.getElementById('image');

          var filePath = fileInput.value;

          // Allowing file type
          var allowedExtensions =
            /(\.jpg|\.jpeg|\.png)$/i;

          if (!allowedExtensions.exec(filePath)) {
            alert('Invalid file type');
            fileInput.value = '';
            return false;
          }
        }
      </script>



      <!-- Vendor JS Files -->
      <script src="/public/assets/vendor/apexcharts/apexcharts.min.js"></script>
      <script src="/public/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
      <script src="/public/assets/vendor/chart.js/chart.umd.js"></script>
      <script src="/public/assets/vendor/echarts/echarts.min.js"></script>
      <script src="/public/assets/vendor/quill/quill.min.js"></script>
      <script src="/public/assets/vendor/simple-datatables/simple-datatables.js"></script>
      <script src="/public/assets/vendor/tinymce/tinymce.min.js"></script>
      <script src="/public/assets/vendor/php-email-form/validate.js"></script>

      <!-- Template Main JS File -->
      <script src="/public/assets/js/main.js"></script>

      </body>


